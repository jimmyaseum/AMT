<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/annonce.main.coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_251sdp"
            android:minHeight="@dimen/_40sdp"
            app:contentScrim="@color/colorTransparent"
            app:expandedTitleMarginBottom="94dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="Paky youuu">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_40sdp">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTourName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/poppins_semibold"
                        android:text=""
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_15sdp"
                        app:layout_collapseMode="parallax" />

                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/pageIndicator"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        app:centered="true"
                        app:fillColor="@color/colorWhite"
                        app:pageColor="@color/colorLightGray"
                        app:snap="false"
                        app:strokeWidth="0dp" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/colorWhite"
                    app:layout_collapseMode="parallax" />


            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_gravity="bottom"
                app:layout_collapseMode="pin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtoverview"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_39sdp"
                            android:background="@color/colorLightBg1"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="OverView"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/voverview"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorAccent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtitinerary"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_39sdp"
                            android:background="@color/colorWhite"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Itinerary"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/vitinerary"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorWhite" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txthotel"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_39sdp"
                            android:background="@color/colorWhite"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Hotel"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/vhotel"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorWhite" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtcost"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_39sdp"
                            android:background="@color/colorWhite"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Cost"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/vcost"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorWhite" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtin_ex"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_39sdp"
                            android:background="@color/colorWhite"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Inclusions / Exclusions"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/vin_ex"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorWhite" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_50sdp"
        android:background="@color/colorLightBg"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/linear_anchor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLightBg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LL_OVERVIEW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Room Type"
                            android:textColor="@color/gray8"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/edtHotelType"
                            style="@style/TextViewStyleRegular"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/bg_rounded_corner"
                            android:backgroundTint="@color/colorLightGray"
                            android:clickable="true"
                            android:drawableRight="@drawable/ic_keyboard_down"
                            android:drawableTint="@color/gray"
                            android:editable="false"
                            android:enabled="true"
                            android:focusable="false"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:inputType="textPersonName|textCapSentences"
                            android:textColorHint="@color/gray8" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Date Of Travel"
                            android:textColor="@color/gray8"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/edtDate"
                            style="@style/TextViewStyleRegular"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/bg_rounded_corner"
                            android:backgroundTint="@color/colorLightGray"
                            android:clickable="true"
                            android:drawableRight="@drawable/ic_keyboard_down"
                            android:drawableTint="@color/gray"
                            android:editable="false"
                            android:enabled="true"
                            android:focusable="false"
                            android:hint="Select a date"
                            android:imeOptions="actionNext"
                            android:textColorHint="@color/gray8" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Date Of Travel"
                        android:textColor="@color/gray8"
                        android:textSize="@dimen/_12sdp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/row_month" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/row_date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Cities : "
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/txtCities"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/color5"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text=" Days "
                            android:textColor="@color/color5"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text=" &amp;  "
                            android:textColor="@color/color5"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/txtNights"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/color5"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text=" Nights "
                            android:textColor="@color/color5"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Starting From:"
                            android:textColor="@color/colorLightGray"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/txtRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/green"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/txtratetype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/colorLightGray" />

                    <LinearLayout
                        android:id="@+id/linear_price_of_inclusive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Price Inclusive Of "
                            android:textColor="@color/gray8"
                            android:textSize="@dimen/_12sdp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvFacilityData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:orientation="horizontal"
                            android:overScrollMode="never"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/adapter_facility_included" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Overview"
                            android:textColor="@color/gray8"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/txtOverViewLess"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="start"
                            android:fontFamily="@font/poppins_regular"
                            android:maxLines="4"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/txtOverViewMore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txtReadMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:drawableRight="@drawable/ic_keyboard_down"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableTint="#0057DA"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center_vertical"
                            android:text="Read More"
                            android:textColor="#0057DA"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_highlights"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Highlights"
                            android:textColor="@color/gray8"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/txtHighlights"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_regular"
                            android:maxLines="4"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/txtHighlightsMore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txtReadMoreHighlights"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:drawableRight="@drawable/ic_keyboard_down"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableTint="#0057DA"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center_vertical"
                            android:text="Read More"
                            android:textColor="#0057DA"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_ITINERARY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Itinerary"
                        android:gravity="center_vertical"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textColor="@color/gray8"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/txtItineraryDownload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Download"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/bg_primary_semi_rounded_corner"
                        android:textColor="@drawable/tab_white"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvItineraryData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_HOTEL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
