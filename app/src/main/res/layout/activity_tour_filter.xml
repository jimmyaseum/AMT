<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rsb="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_back_button"
                app:srcCompat="@drawable/ic_keyboard_arrow_left"
                app:tint="@color/colorBlack" />

            <TextView
                android:id="@+id/tbTvTitle"
                style="@style/toolBarText"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="FILTER" />

            <TextView
                android:id="@+id/txtReset"
                style="@style/toolBarText"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="RESET" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cardbottom"
        android:layout_below="@+id/cardtoolbar"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_20sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            style="@style/toolBarText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="Categories" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvFilterData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:overScrollMode="never" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            style="@style/toolBarText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="Package Type" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvPackageFilterData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:overScrollMode="never" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        style="@style/toolBarText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="Price" />

                    <com.innovattic.rangeseekbar.RangeSeekBar
                        android:id="@+id/rangeSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:rsb_max="200000"
                        app:rsb_maxThumbDrawable="@drawable/ic_circle"
                        app:rsb_minRange="0"
                        app:rsb_minThumbDrawable="@drawable/ic_circle"
                        app:rsb_touchRadius="@dimen/_25sdp"
                        app:rsb_trackColor="@color/gray8"
                        app:rsb_trackRoundedCaps="true"
                        app:rsb_trackSelectedColor="@color/colorAccent"
                        app:rsb_trackSelectedRoundedCaps="true"
                        app:rsb_trackSelectedThickness="@dimen/_5sdp"
                        app:rsb_trackThickness="@dimen/_3sdp" />

                    <!-- Horizontal LinearLayout for low and high price TextViews -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- TextView to display current low price -->
                        <TextView
                            android:id="@+id/textViewLowPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="Low: 0"
                            android:maxLines="1"
                            android:textColor="@color/colorBlack" />

                        <!-- TextView to display current high price -->
                        <TextView
                            android:id="@+id/textViewHighPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="High: 200000"
                            android:maxLines="1"
                            android:textColor="@color/colorBlack" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            style="@style/toolBarText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="Duration (Days)" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <CheckBox
                                android:id="@+id/cbDuration1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="@color/gray8"
                                android:fontFamily="@font/poppins_regular"
                                android:text="1-3"
                                android:textColor="@color/gray8"
                                android:textSize="@dimen/_13sdp" />

                            <CheckBox
                                android:id="@+id/cbDuration2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="@color/gray8"
                                android:fontFamily="@font/poppins_regular"
                                android:text="4-6"
                                android:textColor="@color/gray8"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <CheckBox
                                android:id="@+id/cbDuration3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="@color/gray8"
                                android:fontFamily="@font/poppins_regular"
                                android:text="7-9"
                                android:textColor="@color/gray8"
                                android:textSize="@dimen/_13sdp" />

                            <CheckBox
                                android:id="@+id/cbDuration4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="@color/gray8"
                                android:fontFamily="@font/poppins_regular"
                                android:text="10-12"
                                android:textColor="@color/gray8"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <CheckBox
                                android:id="@+id/cbDuration5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="@color/gray8"
                                android:fontFamily="@font/poppins_regular"
                                android:text=">12"
                                android:textColor="@color/gray8"
                                android:textSize="@dimen/_13sdp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            style="@style/toolBarText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="Budget Per Person (In Rs.)" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">

                            <CheckBox
                                android:id="@+id/cbBudget1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:buttonTint="@color/gray8"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Below 10,000"
                                android:textColor="@color/gray8"
                                android:textSize="@dimen/_13sdp" />

                            <CheckBox
                                android:id="@+id/cbBudget2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:buttonTint="@color/gray8"
                                android:fontFamily="@font/poppins_regular"
                                android:text="10,000 - 20,000"
                                android:textColor="@color/gray8"
                                android:textSize="@dimen/_13sdp" />

                            <CheckBox
                                android:id="@+id/cbBudget3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:buttonTint="@color/gray8"
                                android:fontFamily="@font/poppins_regular"
                                android:text="20,000 - 30,000"
                                android:textColor="@color/gray8"
                                android:textSize="@dimen/_13sdp" />

                            <CheckBox
                                android:id="@+id/cbBudget4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:buttonTint="@color/gray8"
                                android:fontFamily="@font/poppins_regular"
                                android:text="40,000 - 60,000"
                                android:textColor="@color/gray8"
                                android:textSize="@dimen/_13sdp" />

                            <CheckBox
                                android:id="@+id/cbBudget5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:buttonTint="@color/gray8"
                                android:fontFamily="@font/poppins_regular"
                                android:text="1 Lac - 2 Lac"
                                android:textColor="@color/gray8"
                                android:textSize="@dimen/_13sdp" />

                            <CheckBox
                                android:id="@+id/cbBudget6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:buttonTint="@color/gray8"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Above 2 Lac"
                                android:textColor="@color/gray8"
                                android:textSize="@dimen/_13sdp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="@dimen/_5sdp">

        <TextView
            android:id="@+id/tbApply"
            style="@style/toolBarText"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Apply Filter"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>