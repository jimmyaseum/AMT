<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_back_button"
            app:srcCompat="@drawable/ic_keyboard_arrow_left"
            app:tint="@color/colorBlack" />

        <TextView
            android:layout_height="match_parent"
            style="@style/toolBarText"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Company Details" />

        <TextView
            android:id="@+id/txtSave"
            android:layout_height="match_parent"
            style="@style/toolBarText"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="Save" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp">

            <!--Company Name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Company Name"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtCompanyName"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:background="@drawable/aaa"
                    android:inputType="textCapCharacters" />
            </LinearLayout>

            <!--Company Email ID-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Company Email ID"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtCompanyEmail"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:background="@drawable/aaa"
                    android:inputType="textPersonName|textCapSentences" />
            </LinearLayout>

            <!--Company Mobile Number-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Mobile Number"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtCompanyMobileNo"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:background="@drawable/aaa"
                    android:maxLength="15"
                    android:imeOptions="actionNext"
                    android:inputType="number" />
            </LinearLayout>

            <!--Company Address-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Company Address"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtCompanyAddress"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:background="@drawable/aaa"
                    android:inputType="textCapCharacters"/>
            </LinearLayout>

            <!--City-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="City"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtCity"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/aaa"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:drawableTint="@color/gray8" />
            </LinearLayout>

            <!--State-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="State"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtState"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:editable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:clickable="false"
                    android:background="@drawable/aaa" />
            </LinearLayout>

            <!--Country-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Country"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtCountry"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:editable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:clickable="false"
                    android:background="@drawable/aaa" />

            </LinearLayout>

            <!--Pincode-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Pincode"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtPincode"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:background="@drawable/aaa"
                    android:textColor="@color/colorBlack"
                    android:inputType="number" />
            </LinearLayout>

            <!--GST No-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="GST No"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtGSTNo"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/aaa"
                    android:inputType="textCapCharacters"/>
            </LinearLayout>

            <!--GST Copy-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="GST Copy"
                android:textColor="@color/gray8"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/LLChooseGST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="@dimen/_3sdp"
                    android:elevation="@dimen/_10sdp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        style="@style/TextViewStyleMedium"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorWhite"
                        android:text="Choose File" />

                </androidx.cardview.widget.CardView>
                <ImageView
                    android:id="@+id/ImgGSTCopy"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:visibility="gone"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtGSTCopy"
                    style="@style/TextViewStyleRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/colorgreenish20"
                    android:textSize="@dimen/_13sdp"/>
            </LinearLayout>

            <!--PAN No-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="PAN No"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtPANNo"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/aaa"
                    android:inputType="textCapCharacters"/>
            </LinearLayout>

            <!--PAN Copy-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="PAN Copy"
                android:textColor="@color/gray8"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_10sdp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/LLChoosePAN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="@dimen/_3sdp"
                    android:elevation="@dimen/_10sdp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        style="@style/TextViewStyleMedium"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorWhite"
                        android:text="Choose File" />

                </androidx.cardview.widget.CardView>
                <ImageView
                    android:id="@+id/ImgPANCopy"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:visibility="gone"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtPANCopy"
                    style="@style/TextViewStyleRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/colorgreenish20"
                    android:textSize="@dimen/_13sdp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>