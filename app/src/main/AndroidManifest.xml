<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.amtcust">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" tools:node="remove"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.app.amtcust.App"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        android:resizeableActivity="false"
        tools:replace="android:allowBackup"
        android:exported="true">

        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.WelcomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.StartActivity"
            android:exported="true" />
        <activity
            android:name=".activity.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".activity.VerifyOtpActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.HomeActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan|adjustNothing" />
        <activity
            android:name=".activity.DestinationListActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.DestinationDetailsActivity" />
        <activity
            android:name=".activity.EditProfileActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.FamilyMemberListActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.AddCompanyDetailsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.AddDocumentActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.TourListFilterActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.GeneralInformationActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.MyDocumentListActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.DocumentDetailScreenActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.MyTripListActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.TourBookingFormActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.MyVoucherListActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.PaymentReceiptListActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.PaymentReceiptDetailsActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.AddPaymentReceiptActivity"
            android:exported="false" />
        <activity
            android:name=".activity.FlightVoucherDetailActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.HotelVoucherDetailsActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.TourBookingDetailsActivity" />
        <activity
            android:name=".activity.RouteVoucherDetailsActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.NotificationListActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.app.amtcust.Chat.ChatBoatActivity"
            android:exported="true"
            android:theme="@style/ChatAppTheme" />
        <activity
            android:name="com.app.amtcust.Chat.ConversationActivity"
            android:exported="true"
            android:theme="@style/ChatAppTheme" />
        <activity
            android:name="com.app.amtcust.Chat.GroupChatActivity"
            android:exported="true"
            android:theme="@style/ChatAppTheme" /> <!-- Crop Image -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <receiver
            android:name="com.app.amtcust.receiver.OTP_Receiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver> <!-- Firebase -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/logo" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" /> <!-- FCM -->
        <service
            android:name="com.app.amtcust.fcm.MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>